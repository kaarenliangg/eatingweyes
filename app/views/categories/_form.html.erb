<%= form_for @category do |f| %>
    <%= f.label :name %><br>
    <%= f.text_field :name, :class => 'form_spacing' %><br>

    <%= f.label :description %><br>
    <%= f.text_area :description, size: "100x2", :class => 'input_text form_spacing' %><br>

    <%= f.submit class: 'submit_button' %>
<% end %>