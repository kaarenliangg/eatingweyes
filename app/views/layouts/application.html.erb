<!DOCTYPE html>
<html>
  <head>
    <title>Eating w Eyes</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <!-- CLOUNDINARY -->
    <%= cloudinary_js_config %>
  </head>

  <body>
    <div class="container">
      <nav>
          <%= link_to "Home", recipes_path %>
          <div class="dropdown">
            <button class="dropbtn">Categories</button>
              <div class="dropdown-content">
                <% if @categories.present? %>
                  <% @categories.each do |category| %>
                    <a href="<%= category_path(category) %>"><%= category.name %></a>
                  <% end %>
                <% end %>
              </div>
            </div>
          <% if @current_user.present?%>
            <%= link_to "New Recipe", recipes_new_path %>
            <%= link_to "My Recipe",  users_index_path %>
            <%= link_to "Log Out #{ @current_user.name }", login_path, :method => :delete %>
    
          <% if @current_user.admin?%>
            <%= link_to "New Category", new_category_path  %>
            <%= link_to "All Categories", categories_path %>
          <% end %>

          <% else %>
            <%= link_to "Sign Up", users_new_path%>
            <%= link_to "Sign In", login_path %>
          <% end %>
      </nav>
      <%= yield %>
    </div>
  </body>
</html>
