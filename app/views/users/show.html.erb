
<h2> <%= @user.name %>'s Recipes </h2>  

<% if @current_user == @user %>
  <% @recipes.where(user_id: @current_user.id).each do |recipe| %>
    <%= link_to cl_image_tag(recipe.image), recipe %>
    <%= link_to recipe.title, recipe_path(recipe), :class => 'recipe_show_name' %>
  <% end %>
<% end %>
